<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="horizontal"
    tools:context=".SelectPage">

    <ImageView
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="650dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/selectoption"/>


    <Button
        android:id="@+id/next"
        android:layout_width="103dp"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="280dp"
        android:layout_marginBottom="632dp"
        android:background="#00ff0000"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Go"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/interiorText"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="368dp"
        android:gravity="center"
        android:text="Interior"
        android:fontFamily="@font/gabriola"
        android:textColor="@color/text"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profileText"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="648dp"
        android:gravity="center"
        android:text="Profile"
        android:fontFamily="@font/gabriola"
        android:textColor="@color/text"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/hidden1"
        android:layout_width="415dp"
        android:layout_height="280dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="332dp"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/in_hidden1"
        android:layout_width="400dp"
        android:layout_height="265dp"
        android:layout_marginBottom="340dp"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/hidden1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hidden2"
        android:layout_width="415dp"
        android:layout_height="330dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/in_hidden2"
        android:layout_width="400dp"
        android:layout_height="308dp"
        android:layout_marginBottom="12dp"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/hidden2"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageButton
        android:id="@+id/interiorImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginBottom="360dp"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/interior" />

    <ImageButton
        android:id="@+id/profileImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginBottom="80dp"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/profile" />

</androidx.constraintlayout.widget.ConstraintLayout>